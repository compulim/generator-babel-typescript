{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "pretty": true,
    "skipLibCheck": true
  },
  "exclude": [
    "src/**/*.spec.js",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "src/__tests__/**/*.js",
    "src/__tests__/**/*.ts",
  ],
  "include": [
    "src/**/*"
  ]
}
